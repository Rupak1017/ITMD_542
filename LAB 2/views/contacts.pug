extends layout
  
block style
  link(rel='stylesheet', href='/stylesheets/navbar-fixed.css')

block content
  nav(class="navbar navbar-expand-md navbar-dark fixed-top bg-dark")
    div(class="container-fluid")

      button(class="navbar-toggler", type="button", data-bs-toggle="collapse", data-bs-target="#navbarCollapse", aria-controls="navbarCollapse", aria-expanded="false", aria-label="Toggle navigation")
        span(class="navbar-toggler-icon")

      div(class="collapse navbar-collapse", id="navbarCollapse")
        ul(class="navbar-nav me-auto mb-2 mb-md-0")
          li(class="nav-item")
            a(class="nav-link", aria-current="page", href="/") Home

          li(class="nav-item")
            a(class="nav-link active", href="/contacts") Contacts

  main(class="container")
    div(class="bg-light p-5 rounded")
      h1= title
      p Welcome to the contacts page!
      a(href='/contacts/create', class='btn btn-primary') Create a new contact
      if contacts.length > 0
        table(class="table table-hover table-dark")
          thead
            tr
              th(scope="col") First Name
              th(scope="col") Last Name
              th(scope="col") Email
              th(scope="col") Actions
          tbody
            each value in contacts
              tr
                td= value.firstName
                td= value.lastName
                td= value.email
                td
                  a(href=`/contacts/${value.id}`, class="btn btn-primary")= 'View Contact '
                  a(href=`/contacts/${value.id}/edit`, class="btn btn-primary")= 'Edit Contact '
                  a(href=`/contacts/${value.id}/delete`, class="btn btn-danger")= 'Delete Contact'